{
  "name": "web-session",
  "version": "0.2.0",
  "description": "Keep user sessions between visits",
  "repository": {
    "type": "git",
    "url": "git://github.com/gilbarbara/web-session.git"
  },
  "keywords": [
    "web",
    "session",
    "analytics",
    "google analytics"
  ],
  "author": "Gil Barbara <gilbarbara@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gilbarbara/web-session/issues"
  },
  "main": "lib/index.js",
  "module": "esm/index.js",
  "files": [
    "esm",
    "lib",
    "src"
  ],
  "peerDependencies": {
    "luxon": "^1.0.0"
  },
  "devDependencies": {
    "@gilbarbara/eslint-config": "^0.1.5",
    "@gilbarbara/prettier-config": "^0.1.0",
    "@gilbarbara/tsconfig": "^0.1.0",
    "@size-limit/preset-small-lib": "^5.0.1",
    "@types/jest": "^26.0.24",
    "@types/luxon": "^1.27.1",
    "@types/node": "^16.3.1",
    "cross-env": "^7.0.3",
    "del-cli": "^4.0.0",
    "history": "^4.10.1",
    "husky": "^4.3.8",
    "is-ci-cli": "^2.2.0",
    "jest": "^27.0.6",
    "jest-date-mock": "^1.0.8",
    "jest-localstorage-mock": "^2.4.14",
    "jest-location-mock": "^1.0.9",
    "luxon": "^1.28.0",
    "repo-tools": "^0.2.2",
    "size-limit": "^5.0.1",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc",
    "build:esm": "tsc -m es6 --outDir esm",
    "watch:cjs": "npm run build:cjs -- -w",
    "watch:esm": "npm run build:esm -- -w",
    "clean": "del lib/* && del esm/*",
    "lint": "eslint --ext .ts,.js src test",
    "test": "is-ci \"test:coverage\" \"test:watch\"",
    "test:coverage": "TZ=UTC jest --coverage --bail",
    "test:watch": "TZ=UTC jest --watchAll --verbose",
    "typecheck": "tsc --noEmit",
    "format": "prettier \"**/*.{js,jsx}\" --write",
    "validate": "npm run lint && npm run typecheck && npm run test:coverage && npm run build && npm run size",
    "size": "size-limit",
    "prepublishOnly": "npm run validate"
  },
  "browserslist": [
    "> 0.2%",
    "not dead"
  ],
  "eslintConfig": {
    "extends": [
      "@gilbarbara/eslint-config"
    ],
    "env": {
      "browser": true,
      "jest": true
    },
    "rules": {
      "class-methods-use-this": "off"
    }
  },
  "prettier": "@gilbarbara/prettier-config",
  "size-limit": [
    {
      "path": "./lib/index.js",
      "limit": "2 kB"
    },
    {
      "path": "./esm/index.js",
      "limit": "2 kB"
    }
  ],
  "husky": {
    "hooks": {
      "post-merge": "repo-tools install-packages",
      "pre-commit": "repo-tools check-remote && npm run validate"
    }
  }
}
